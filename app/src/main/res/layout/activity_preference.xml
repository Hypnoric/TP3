<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Préférences"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Photo"
            android:id="@+id/textView2"
            android:layout_gravity="left|top"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxPhoto"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dp"
            android:layout_marginTop="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Courriel"
            android:id="@+id/textView3"
            android:layout_gravity="left|top"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/courrierText"
            android:layout_gravity="right|top"
            android:layout_marginTop="150dp"
            android:layout_marginRight="15dp"
            android:text="yourEmail@gmail.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom Groupe"
            android:id="@+id/textView4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="GroupName"
            android:ems="10"
            android:id="@+id/groupNameText"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Endroits de préférence"
            android:id="@+id/textView5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:id="@+id/checkBoxRestaurant"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parc"
            android:id="@+id/checkBoxParc"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinéma"
            android:id="@+id/checkBoxCinema"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="180dp"
            android:layout_marginRight="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sauvergarder et Quitter"
            android:onClick="saveBtnOnClick"
            android:id="@+id/buttonQuit"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp" />

    </FrameLayout>
</RelativeLayout>